{
  "lerna": "2.4.0",
  "packages": [
    "packages/*",
    "src/*"
  ],
  "commands": {
    "publish": {
      "ignore": [
        "src/*"
      ]
    },
    "bootstrap": {
      "ignore": [
        "packages/*"
      ]
    }
  },
  "npmClientArgs": [
    "--access public"
  ],
  "changelog": {
    "labels": {
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix"
    },
    "cacheDir": ".changelog"
  },
  "version": "1.0.1"
}
